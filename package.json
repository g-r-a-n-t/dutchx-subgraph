{
  "name": "simple-subgraph",
  "version": "0.1.0",
  "scripts": {
    "build-contract": "solc contracts/Counter.sol --abi -o abis --overwrite && solc contracts/Counter.sol --bin -o bin --overwrite",
    "create": "graph create g-r-a-n-t/simple-subgraph --node https://api.thegraph.com/deploy/",
    "create-local": "graph create g-r-a-n-t/simple-subgraph --node http://127.0.0.1:8020",
    "codegen": "graph codegen --debug --output-dir src/types/",
    "build": "graph build --debug",
    "deploy": "graph deploy g-r-a-n-t/simple-subgraph --debug --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "deploy-local": "graph deploy g-r-a-n-t/simple-subgraph --debug --ipfs http://localhost:5001 --node http://127.0.0.1:8020"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.7.1",
    "@graphprotocol/graph-ts": "^0.5.0"
  }
}